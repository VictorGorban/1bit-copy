{
  "exclude": [
    "node_modules",
    "build-dev",
    "build-public",
    ".next",
    "public"
  ],
  "compilerOptions": {
    "target": "ES2019",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@root/*": [
        "./*"
      ],
      "@src/*": [
        "./*"
      ],
      "@helpers/*": [
        "./helpers/*"
      ],
      "@clientHelpers/*": [
        "./helpers/client/*"
      ],
      "@clientHelpers": [
        "./helpers/client"
      ],
      "@serverHelpers/*": [
        "./helpers/server/*"
      ],
      "@serverHelpers": [
        "./helpers/server"
      ],
      "@commonHelpers/*": [
        "./helpers/common/*"
      ],
      "@commonHelpers": [
        "./helpers/common"
      ],
      "@pageMiddlewares/*": [
        "pageMiddlewares/*"
      ],
      "@api/*": [
        "app/api/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@assets/*": [
        "public/assets/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "build-dev/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "build/types/**/*.ts"
 ]
}
